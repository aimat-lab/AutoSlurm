{% extends "base.sh.j2" %}

{% block after %}

wait
sleep 10

# This is the absolute path to the folder in which the current script is located.
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
if compgen -G "${SCRIPT_DIR}/${SLURM_JOB_ID}_*.resume" > /dev/null; then
	export PREVIOUS_SLURM_ID=${SLURM_JOB_ID}
	sbatch ${SCRIPT_DIR}/resume_0.sh
fi

{% endblock %}